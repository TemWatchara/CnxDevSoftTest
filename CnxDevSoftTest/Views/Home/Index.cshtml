@{
    ViewData["Title"] = "Home Page";
}


<!DOCTYPE html>
<html>
<head>
<title>CnxDevSoft</title>
</head>
<body>
<form>
<h1>CnxDevSoft</h1>
    <div class="text-center">
        
        <h1 class="display-4">Welcome</h1>
            <label for="number1">Enter Your Numbers X : </label>
            <input type="number" id="number1" name="number1"><br><br>
            <label for="number2">Enter Your Numbers Y : </label>
            <input type="number" id="number2" name="number2"><br><br>
            <h5>Please Chose Your Math Symbols</h5>
            <select id="math">
                <option value="1">+</option>
                <option value="2">-</option>
                <option value="3">*</option>
                <option value="4">/</option>
            </select>
            <br><br>
            <div class="row">
                <div class="text-center">
                    <button onclick="math_symbols()" class="btn btn-success">Submit</button>
                </div>
            </div>
            
    </div>
        
</form>
    <script>
        function math_symbols() {
            var z = document.getElementById("math").value;
            var x = document.getElementById("number1").value;
            var y = document.getElementById("number2").value;
            var result;

            
                if (z == 1) {
                    result = x + y;
                }
                else if (z == 2) {
                    result = x - y;
                }
                else if (z == 3) {
                    result = x * y;
                }
                else {
                    result = x / y;
                }

            window.alert("Result = " + result);
            
        }
    </script>
</body>
</html>
